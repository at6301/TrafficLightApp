<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/redlight"
            android:layout_width="114dp"
            android:layout_height="321dp"
            android:visibility="visible"
            app:srcCompat="@drawable/redlight" />

        <ImageView
            android:id="@+id/yellowlight"
            android:layout_width="114dp"
            android:layout_height="321dp"
            android:visibility="gone"
            app:srcCompat="@drawable/yellowlight" />

        <ImageView
            android:id="@+id/greenlight"
            android:layout_width="114dp"
            android:layout_height="321dp"
            android:visibility="gone"
            app:srcCompat="@drawable/greenlight" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button"
            android:layout_width="142dp"
            android:layout_height="69dp"
            android:backgroundTint="@color/red"
            android:text="@string/redlight_text"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>